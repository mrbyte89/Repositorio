<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>Nuevo</servlet-name>
        <servlet-class>jdbc.servlet.Nuevo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditarBorrar</servlet-name>
        <servlet-class>jdbc.servlet.EditarBorrar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Editar</servlet-name>
        <servlet-class>jdbc.servlet.Editar</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Nuevo</servlet-name>
        <url-pattern>/Nuevo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditarBorrar</servlet-name>
        <url-pattern>/EditarBorrar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Editar</servlet-name>
        <url-pattern>/Editar</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
